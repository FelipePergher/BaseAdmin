@{
    Layout = "_Layout";
}

@section Styles {
    @RenderSection("Styles", required: false)
}

<!-- Header -->
<div class="header pb-6 d-flex align-items-center" style="min-height: 300px; background-image: url(https://via.placeholder.com/300); background-size: cover; background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid align-items-center">
        <div class="row">
            <div class="col-10">
                <h1 class="display-2 text-white">Olá @User.Identity.Name</h1>
                <p class="text-white">@ViewData["ManageDescription"]</p>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-4 mb-4 mb-xl-0">
            <partial name="_ManageNav" />
        </div>
        <div class="col-xl-8">
            @RenderBody()
        </div>
    </div>

</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
