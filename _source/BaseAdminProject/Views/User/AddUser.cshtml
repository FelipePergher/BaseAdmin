@using BaseAdminProject.Business.Core
@model BaseAdminProject.Models.FormModels.AddUserFormModel
@{
    ViewData["Title"] = "Adicionar Usuário";
}

@section Styles {
    <environment names="Development">
        <link href="~/dist/css/add-user.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/add-user.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">@ViewData["Title"]</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item">
                                <a asp-controller="Account" asp-action="Index"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> Usuários</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewData["Title"]
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-xl-6">
            <div class="card-wrapper">

                <div class="card">

                    <div class="card-header">
                        <h3 class="mb-0">@ViewData["Title"]</h3>
                    </div>

                    <div class="card-body">
                        <form id="addUserForm" asp-controller="User" asp-action="AddUser" method="post">
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="Name"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-user"></i>
                                                </span>
                                            </div>

                                            <input asp-for="Name" class="form-control" placeholder="João da Silva">
                                        </div>
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="BirthdayDate"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-calendar-day"></i>
                                                </span>
                                            </div>

                                            <input id="birthdayDate" asp-for="BirthdayDate" class="form-control">
                                        </div>
                                        <span asp-validation-for="BirthdayDate" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="UserName"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-user"></i>
                                                </span>
                                            </div>

                                            <input asp-for="UserName" class="form-control" placeholder="joaosilva">
                                        </div>
                                        <span asp-validation-for="UserName" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="Email"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-envelope"></i>
                                                </span>
                                            </div>

                                            <input asp-for="Email" class="form-control" placeholder="nome@@exemplo.com">
                                        </div>
                                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="PhoneNumber"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-phone"></i>
                                                </span>
                                            </div>

                                            <input asp-for="PhoneNumber" class="form-control" data-mask="@Globals.MaskPhone" placeholder="(49) 9 9999-9999">
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Role" class="form-control-label"></label>

                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-user-tag"></i>
                                                </span>
                                            </div>

                                            <select asp-for="Role" asp-items="Model.ApplicationRoles" class="form-control">
                                                <option value="" selected disabled hidden="">Selecione uma opção</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Role" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="Password"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-lock"></i>
                                                </span>
                                            </div>

                                            <input asp-for="Password" class="form-control" placeholder="********">

                                            <div class="input-group-append eye-password eyePassword">
                                                <span class="input-group-text">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="ConfirmPassword"></label>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-lock"></i>
                                                </span>
                                            </div>

                                            <input asp-for="ConfirmPassword" class="form-control" placeholder="********">

                                            <div class="input-group-append eye-password eyePassword">
                                                <span class="input-group-text">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                                    </div>
                                    
                                    <div class="custom-control custom-control-alternative custom-checkbox mb-3">
                                        <input asp-for="Active" class="custom-control-input">
                                        <label asp-for="Active" class="custom-control-label"></label>
                                    </div>

                                    <button type="submit" class="btn btn-primary float-right">
                                        Salvar
                                        <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        <span class="sr-only">Carregando...</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/dist/js/add-user.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/add-user.bundle.js" asp-append-version="true"></script>
    </environment>
}