@model BaseAdminProject.Models.FormModels.PersonalInfoFormModel
@{
    ViewData["Title"] = "Perfil";
    Layout = "_LayoutManage";
    ViewData["ManageDescription"] = "Está é sua página de perfil, onde contém suas informações básicas.";
}

@section Styles {
    <environment names="Development">
        <link href="~/dist/css/personal-info.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/personal-info.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <partial name="_StatusMessage" />

        
        <form id="personalInfoForm" asp-controller="Account" asp-action="PersonalInfo" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label class="form-control-label" asp-for="Name"></label>
                <div class="input-group input-group-merge">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>

                    <input asp-for="Name" class="form-control" placeholder="@Model.Name">
                </div>
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>
                                    
            <div class="form-group">
                <label class="form-control-label" asp-for="BirthdayDate"></label>
                <div class="input-group input-group-merge">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-calendar-day"></i>
                        </span>
                    </div>

                    <input id="birthdayDate" asp-for="BirthdayDate" class="form-control">
                </div>
                <span asp-validation-for="BirthdayDate" class="invalid-feedback"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                Atualizar Informações
                <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="sr-only">Carregando...</span>
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/dist/js/personal-info.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/personal-info.bundle.js" asp-append-version="true"></script>
    </environment>
}