@model BaseAdminProject.Models.FormModels.LoginFormModel

@{
    ViewData["Title"] = "Entrar";
    Layout = "_LayoutBase";
}

@section Styles {
    <environment names="Development">
        <link href="~/dist/css/login.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/login.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<!-- Main content -->
<div class="main-content bg-default h-100vh">
    <!-- Header -->
    <div class="header bg-gradient-primary py-7">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-12 col-sm-10 col-md-8 col-xl-6">
                        <h1 class="text-white">@ViewData["title"]</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>

    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-xl-6">
                <div class="card bg-secondary border-0 mb-0">
                    <div class="card-body px-lg-5 py-lg-5">
                        <partial name="_StatusMessage" />

                        <form id="loginForm" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="form-group mb-3">
                                <label asp-for="EmailUsername" class="form-control-label"></label>
                                <div class="input-group input-group-merge">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-user" aria-hidden="true"></i>
                                        </span>
                                    </div>

                                    <input asp-for="EmailUsername" class="form-control" placeholder="Email">
                                </div>

                                <span asp-validation-for="EmailUsername" class="invalid-feedback"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-control-label"></label>

                                <div class="input-group input-group-merge">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock" aria-hidden="true"></i>
                                        </span>
                                    </div>

                                    <input asp-for="Password" class="form-control" placeholder="*******">

                                    <div class="input-group-append eye-password eyePassword">
                                        <span class="input-group-text">
                                            <i class="fas fa-eye-slash" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>

                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>

                            <div class="custom-control custom-control-alternative custom-checkbox mb-3">
                                <input asp-for="RememberMe" class="custom-control-input">
                                <label asp-for="RememberMe" class="custom-control-label"></label>
                            </div>

                            <button type="submit" class="btn btn-primary my-4 float-right">
                                Entrar
                                <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="sr-only">Carregando...</span>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <a asp-controller="Account" asp-action="ForgotPassword" class="text-light"><small>Esqueceu a senha?</small></a>
                    </div>
                    <div class="col-6 text-right">
                        <a asp-controller="Account" asp-action="ResendConfirmEmail" class="text-light"><small>Reenviar email de confirmação</small></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/dist/js/login.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/login.bundle.js" asp-append-version="true"></script>
    </environment>
}