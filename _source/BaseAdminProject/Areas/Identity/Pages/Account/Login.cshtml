@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

@section Styles {
    <environment names="Development">
        <link href="~/dist/css/login.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/login.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<!-- Main content -->
<div class="main-content bg-default h-100vh">
    <!-- Header -->
    <div class="header bg-gradient-primary py-7">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                        <h1 class="text-white">Welcome!</h1>
                        <p class="text-lead text-white">Use these awesome forms to login or create new account in your project for free.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>

    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card bg-secondary border-0 mb-0">
                    <div class="card-body px-lg-5 py-lg-5">
                        <div class="text-center text-muted mb-4">
                            <small>Login</small>
                        </div>
                        <form id="loginForm" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="invalid-feedback"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.Email" class="form-control-label"></label>
                                <div class="input-group input-group-merge">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                                </div>

                                <span asp-validation-for="Input.Email" class="invalid-feedback ml-5"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.Password" class="form-control-label"></label>
                                
                                <div class="input-group input-group-merge">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Senha">
                                    <div class="input-group-append eye-password eyePassword">
                                        <span class="input-group-text"><i class="fas fa-eye-slash"></i></span>
                                    </div>
                                </div>

                                <span asp-validation-for="Input.Password" class="invalid-feedback ml-5"></span>
                            </div>

                            <div class="custom-control custom-control-alternative custom-checkbox mb-3">
                                <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" id="customControlValidation1">
                                <label asp-for="Input.RememberMe" class="custom-control-label" for="customControlValidation1">Lembrar-me</label>
                                <span class="invalid-feedback"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary my-4" data-style="expand-right">
                                    Entrar
                                    <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="sr-only">Loading...</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <a asp-page="./ForgotPassword" class="text-light"><small>Esqueceu a senha?</small></a>
                    </div>
                    <div class="col-6 text-right">
                        <a asp-page="./ResendEmailConfirmation" class="text-light"><small>Reenviar email de confirmação</small></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/dist/js/login.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/login.bundle.js" asp-append-version="true"></script>
    </environment>
}